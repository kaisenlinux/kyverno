#!/usr/bin/make -f

export GOPATH=$(CURDIR)/obj-x86_64-linux-gnu
export DEB_BUILD_OPTIONS=nocheck

%:
	dh $@ --buildsystem=golang

override_dh_auto_build:
	make local

override_dh_auto_install:
	dh_auto_install -- --no-source
	mkdir -p debian/kyverno/usr/share/bash-completion/completions debian/kyverno/usr/share/zsh/vendor-completions
	$(CURDIR)/kubectl-kyverno completion bash > debian/kyverno/usr/share/bash-completion/completions/kyverno
	$(CURDIR)/kubectl-kyverno completion zsh > debian/kyverno/usr/share/zsh/vendor-completions/_kyverno
